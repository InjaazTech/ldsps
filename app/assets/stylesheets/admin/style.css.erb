@font-face {
  font-family: 'Kufi';
  src: url("<%=asset_path('fonts/TheSans-Plain.ttf?v=2.4.0')%>");
  font-weight: 400;
}

@font-face {
  font-family: 'Kufi';
  src: url("<%=asset_path('fonts/TheSans-Bold.ttf?v=2.4.0')%>");
  font-weight: bold;
}

*:not(i):not(.fa) {
  font-family: 'Kufi';
}

h3,.nav-tree li a{
  font-family: 'Kufi';
}

section{
    text-align: right;
    direction: rtl;
}

#side-panel .side-panel-wrap{
    text-align: right;
}

.thumb{
    width: 50px;
    height: 50px;
}

#header{
    background-color: #00acba;
}

#header a, #primary-menu ul li > a, #top-search form input{
  color: #fff;
  font-family: 'Kufi';
  letter-spacing: 0px;
  font-size: 16px;
}

.alert-notice{
  color: #0c5460;
    background-color: #d1ecf1;
    border-color: #bee5eb;
}

#header a, #primary-menu ul li > a, #top-search form input{
  color: #fff;
  font-family: 'Kufi';
  letter-spacing: 0px;
  font-size: 16px;
}
.nav-tree li a{
  letter-spacing: 0px;
  font-size: 16px;
}

/* pagination */
.pagination a,
.pagination span.current,
.pagination span.gap {
  float: left;
  padding: 0 14px;
  line-height: 38px;
  text-decoration: none;
  background-color: white;
  border: 1px solid #ddd;
  border-left-width: 0;
}

.pagination{
  width: max-content;
}

.pagination .last{
  border-left: 1px solid #ddd;
}

.red{
  color:red;
}

.admin-img{
  max-height: 200px;
}

.hidden{
  display: none !important;
}

.stats label{
  color: #36b9cc;
}

.pt-20{
  padding-top: 20px;
}

.panel-danger{
  color: red;
}

.queued{
  color: #c09853;
}

.processing{
  color: #3a87ad;
}
.completed{
  color: #468847;
}

.processing_hint{
  color: #c09853;
  text-align: center;
}

.test-download-links{
  padding-bottom: 10px;
}
.test-download-links a{
  padding: 10px;
}

.table{
  word-break: break-word;
  word-wrap: break-word;
}