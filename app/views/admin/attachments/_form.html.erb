<%= form_for @attachment, url: (@attachment.new_record? ? admin_attachments_url : admin_attachment_path(@attachment)), :html => { :class => "form-horizontal team_member" } do |f| %>

  <% if @attachment.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@attachment.errors.count, "error") %> prohibited this attachment from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @attachment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  
  <div class="form-group">
    <div class="col-lg-10">
      <div id="libfileuploader">Upload</div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit t('helpers.links.submit'), :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_attachments_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
