<%- model_class = ContactUser -%>
<div id="content">
  <%= render 'admin-shared/header'%>
  <div class="container-fluid">
    <div class="card shadow">
        <div class="card-header py-3">
            <p class="text-primary m-0 font-weight-bold"><%=t model_class.human_attribute_name(:model_name) %></p>
        </div>
        <div class="card-body">
            <div class="row">
            </div>
            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                <table class="table my-0" id="dataTable">
                    <thead>
                        <tr>
                          <th><%= model_class.human_attribute_name(:name) %></th>
                          <th><%= model_class.human_attribute_name(:email) %></th>
                          <th><%= model_class.human_attribute_name(:phone) %></th>
                          <th><%= model_class.human_attribute_name(:subject) %></th>
                          <th><%= model_class.human_attribute_name(:service) %></th>
                          <th><%= model_class.human_attribute_name(:message) %></th>
                          <th><%= model_class.human_attribute_name(:created_at) %></th>
                          <th><%=t '.actions', :default => t("helpers.actions") %></th>
                        </tr>
                    </thead>
                    <tbody>
                      <% @contact_users.each do |contact_user| %>
                          <tr>
                            <td><%= contact_user.name %></td>
                            <td><%= contact_user.email %></td>
                            <td><%= contact_user.phone %></td>
                            <td><%= contact_user.subject %></td>
                            <td><%= contact_user.service %></td>
                            <td><%= contact_user.message %></td>
                            <td><%= short_datetime(contact_user.created_at) %></td>
                            <td>
                              <%= link_to '<i class="fa fa-trash"></i>'.html_safe,
                                          admin_contact_user_path(contact_user),
                                          :method => :delete,
                                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                          :class => 'btn btn-xs btn-danger' %>
                            </td>
                          </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <div class="row">
                
                <div class="col-md-6">
                  <%= paginate @contact_users %>
                </div>
            </div>
        </div>
    </div>
</div>
</div>