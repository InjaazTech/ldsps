<%- model_class = FaQuestion -%>
<div class="page-header">
  <h3><%=t model_class.human_attribute_name(:model_name) %></h3>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:ar_question) %></th>
      <th><%= model_class.human_attribute_name(:en_question) %></th>
      <th><%= model_class.human_attribute_name(:ar_answer) %></th>
      <th><%= model_class.human_attribute_name(:en_answer) %></th>
      <th><%= model_class.human_attribute_name(:position) %></th>
      <th><%= model_class.human_attribute_name(:hidden) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @fa_questions.each do |fa_question| %>
      <tr>
        <td><%= image_tag fa_question.image_url, class: 'thumb' %></td>
        <td><%= fa_question.link %></td>
        <td><%= fa_question.position %></td>
        <td><%= fa_question.hidden %></td>
        <td><%= short_datetime(fa_question.created_at) %></td>
        <td>
          <%= link_to '<i class="fa fa-eye"></i>'.html_safe,
                      admin_fa_question_path(fa_question), :class => 'btn btn-default btn-xs' %>
          <%= link_to '<i class="fa fa-pencil"></i>'.html_safe,
                      edit_admin_fa_question_path(fa_question), :class => 'btn btn-default btn-xs' %>
          <%= link_to '<i class="fa fa-trash"></i>'.html_safe,
                      admin_fa_question_path(fa_question),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_fa_question_path,
            :class => 'btn btn-primary' %>
