<%- model_class = FaQuestion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:ar_question) %>:</strong></dt>
  <dd><%= @fa_question.ar_question %></dd>
  <dt><strong><%= model_class.human_attribute_name(:en_question) %>:</strong></dt>
  <dd><%= @fa_question.en_question %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ar_answer) %>:</strong></dt>
  <dd><%= @fa_question.ar_answer.to_s.html_safe %></dd>
  <dt><strong><%= model_class.human_attribute_name(:en_answer) %>:</strong></dt>
  <dd><%= @fa_question.en_answer.to_s.html_safe %></dd>
  <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
  <dd><%= @fa_question.position %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hidden) %>:</strong></dt>
  <dd><%= @fa_question.hidden? ? '<i class="icon-line-eye"></i>'.html_safe : '<i class="fa fa-eye-close"></i>'.html_safe  %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_fa_questions_path, :class => 'btn btn-default'  %>
<%= link_to '<i class="fa fa-pencil"></i>'.html_safe,
              edit_admin_fa_question_path(@fa_question), :class => 'btn btn-default' %>
<%= link_to '<i class="fa fa-trash"></i>'.html_safe,
              admin_fa_question_path(@fa_question),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
