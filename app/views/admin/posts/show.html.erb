<%- model_class = Post -%>
<div id="content">
  <%= render 'admin-shared/header'%>
  <div class="container-fluid">
    <div class="card shadow">
        <div class="card-header py-3">
            <p class="text-primary m-0 font-weight-bold"><%=t model_class.human_attribute_name(:model_name) %></p>
        </div>
        <div class="card-body">
            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
              <dl class="dl-horizontal">
                <% SupportLocale.all.each do |locale|%>
                  <dt><strong><%= model_class.human_attribute_name("#{locale.iso_code}_title") %>:</strong></dt>
                  <dd><%= @post.title(locale.iso_code) %></dd>
                <% end %>
                <dt><%= model_class.human_attribute_name(:attachment) %></dt>
                <dd><%= image_tag @post.image_url(:thumb), class: 'thumb' if @post.has_image? %></dd>
                <dt><%= model_class.human_attribute_name("is_published") %>:</dt>
                <dd><%= @post.is_published %></dd>
                <% SupportLocale.all.each do |locale|%>
                  <dt><strong><%= model_class.human_attribute_name("#{locale.iso_code}_subtitle") %>:</strong></dt>
                  <dd><%= @post.subtitle(locale.iso_code) %></dd>
                <% end %>
                <% SupportLocale.all.each do |locale|%>
                  <dt><strong><%= model_class.human_attribute_name("#{locale.iso_code}_content") %>:</strong></dt>
                  <dd><%= @post.content(locale.iso_code) %></dd>
                <% end %>
              </dl>
              <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_posts_path, :class => 'btn btn-default'  %>
<%= link_to '<i class="fa fa-pencil"></i>'.html_safe,
              edit_admin_post_path(@post), :class => 'btn btn-default' %>
<%= link_to '<i class="fa fa-trash"></i>'.html_safe,
              admin_post_path(@post),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
            </div>
        </div>
    </div>
</div>
</div>