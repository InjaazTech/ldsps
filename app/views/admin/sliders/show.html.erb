<%- model_class = Slider -%>
<div id="content">
  <%= render 'admin-shared/header'%>
  <div class="container-fluid">
    <div class="card shadow">
        <div class="card-header py-3">
            <p class="text-primary m-0 font-weight-bold"><%=t model_class.human_attribute_name(:model_name) %></p>
        </div>
        <div class="card-body">
            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
              <dl class="dl-horizontal">
                <dt><strong><%= model_class.human_attribute_name(:attachment_id) %>:</strong></dt>
                <dd><%= image_tag @slider.image_url, width: '200px' %></dd>
                <dt><strong><%= model_class.human_attribute_name(:link) %>:</strong></dt>
                <dd><%= @slider.link %></dd>
                <dt><strong><%= model_class.human_attribute_name(:link_title) %>:</strong></dt>
                <dd><%= @slider.link_title %></dd>
                <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
                <dd><%= @slider.title %></dd>
                <dt><strong><%= model_class.human_attribute_name(:subtitle) %>:</strong></dt>
                <dd><%= @slider.subtitle %></dd>
                <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
                <dd><%= @slider.order_position %></dd>
                <dt><strong><%= model_class.human_attribute_name(:hidden) %>:</strong></dt>
                <dd><%= @slider.hidden %></dd>
              </dl>

              <%= link_to '<i class="fa fa-eye"></i>'.html_safe,
              admin_sliders_path, :class => 'btn btn-default'  %>
<%= link_to '<i class="fa fa-pencil"></i>'.html_safe,
              edit_admin_slider_path(@slider), :class => 'btn btn-default' %>
<%= link_to '<i class="fa fa-trash"></i>'.html_safe,
              admin_slider_path(@slider),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
            </div>
        </div>
    </div>
</div>
</div>