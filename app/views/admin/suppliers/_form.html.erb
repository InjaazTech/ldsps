<%= form_for @supplier, url: (@supplier.new_record? ? admin_suppliers_url : admin_supplier_path(@supplier)), :html => { :class => "form-horizontal supplier" } do |f| %>

  <% if @supplier.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@supplier.errors.count, "error") %> prohibited this supplier from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @supplier.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :attachment_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <div id="fileuploader">Upload</div>
      <%= f.hidden_field :attachment_id, id: 'attachment_id' %>
      <%= image_tag @supplier.image_url, class: 'thumb' if !@supplier.new_record? %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :link, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :link, :class => 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :order_position, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :order_position, :class => 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit t('helpers.links.submit'), :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_suppliers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
