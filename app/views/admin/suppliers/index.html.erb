<%- model_class = Supplier -%>
<div id="content">
  <%= render 'admin-shared/header'%>
  <div class="container-fluid">
    <div class="card shadow">
        <div class="card-header py-3">
            <p class="text-primary m-0 font-weight-bold"><%=t model_class.human_attribute_name(:model_name) %></p>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 text-nowrap">
                  <%= link_to t('.new', :default => t("helpers.links.new")),new_admin_supplier_path,:class => 'btn btn-primary' %>
                </div>
            </div>
            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th><%= model_class.human_attribute_name(:attachment_id) %></th>
                    <th><%= model_class.human_attribute_name(:link) %></th>
                    <th><%= model_class.human_attribute_name(:order_position) %></th>
                    <th><%= model_class.human_attribute_name(:created_at) %></th>
                    <th><%=t '.actions', :default => t("helpers.actions") %></th>
                  </tr>
                </thead>
                <tbody>
                  <% @suppliers.each do |supplier| %>
                    <tr>
                      <td><%= image_tag supplier.image_url, class: 'thumb' %></td>
                      <td><%= supplier.link %></td>
                      <td><%= supplier.order_position %></td>
                      <td><%= short_datetime(supplier.created_at) %></td>
                      <td>
                        <%= link_to '<i class="fa fa-eye"></i>'.html_safe,
                                    admin_supplier_path(supplier), :class => 'btn btn-default btn-xs' %>
                        <%= link_to '<i class="fa fa-pencil"></i>'.html_safe,
                                    edit_admin_supplier_path(supplier), :class => 'btn btn-default btn-xs' %>
                        <%= link_to '<i class="fa fa-trash"></i>'.html_safe,
                                    admin_supplier_path(supplier),
                                    :method => :delete,
                                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                    :class => 'btn btn-xs btn-danger' %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <div class="row">
                
                <div class="col-md-6">
                  <%= paginate @suppliers %>
                </div>
            </div>
        </div>
    </div>
</div>
</div>