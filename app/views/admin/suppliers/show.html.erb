<%- model_class = Supplier -%>
<div id="content">
  <%= render 'admin-shared/header'%>
  <div class="container-fluid">
    <div class="card shadow">
        <div class="card-header py-3">
            <p class="text-primary m-0 font-weight-bold"><%=t model_class.human_attribute_name(:model_name) %></p>
        </div>
        <div class="card-body">
            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
              <dl class="dl-horizontal">
                <dt><strong><%= model_class.human_attribute_name(:attachment_id) %>:</strong></dt>
                <dd><%= image_tag @supplier.image_url, width: '200px' %></dd>
                <dt><strong><%= model_class.human_attribute_name(:link) %>:</strong></dt>
                <dd><%= @supplier.link %></dd>
                <dt><strong><%= model_class.human_attribute_name(:order_position) %>:</strong></dt>
                <dd><%= @supplier.order_position %></dd>
              </dl>

              <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_suppliers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_supplier_path(@supplier), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_supplier_path(@supplier),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
            </div>
        </div>
    </div>
</div>
</div>




