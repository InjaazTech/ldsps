<%- model_class = TeamMember -%>
<div id="content">
  <%= render 'admin-shared/header'%>
  <div class="container-fluid">
    <div class="card shadow">
        <div class="card-header py-3">
            <p class="text-primary m-0 font-weight-bold"><%=t model_class.human_attribute_name(:model_name) %></p>
        </div>
        <div class="card-body">
            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
              <dl class="dl-horizontal">
                <dt><strong><%= model_class.human_attribute_name(:ar_name) %>:</strong></dt>
                <dd><%= @team_member.ar_name %></dd>
                <dt><strong><%= model_class.human_attribute_name(:en_name) %>:</strong></dt>
                <dd><%= @team_member.en_name %></dd>
                <dt><strong><%= model_class.human_attribute_name(:ar_text) %>:</strong></dt>
                <dd><%= @team_member.ar_text %></dd>
                <dt><strong><%= model_class.human_attribute_name(:en_text) %>:</strong></dt>
                <dd><%= @team_member.en_text %></dd>
                <dt><strong><%= model_class.human_attribute_name(:order_position) %>:</strong></dt>
                <dd><%= @team_member.order_position %></dd>
              </dl>

              <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_team_members_path, :class => 'btn btn-default'  %>
<%= link_to '<i class="fa fa-pencil"></i>'.html_safe,
              edit_admin_team_member_path(@team_member), :class => 'btn btn-default' %>
<%= link_to '<i class="fa fa-trash"></i>'.html_safe,
              admin_team_member_path(@team_member),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
            </div>
        </div>
    </div>
</div>
</div>
