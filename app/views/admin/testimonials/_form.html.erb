<%= form_for @testimonial, url: (@testimonial.new_record? ? admin_testimonials_url : admin_testimonial_path(@testimonial)), :html => { :class => "form-horizontal testimonial" } do |f| %>

  <% if @testimonial.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@testimonial.errors.count, "error") %> prohibited this testimonial from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @testimonial.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :ar_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :ar_name, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :en_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :en_name, :class => 'form-control', dir: 'ltr' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :ar_position, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :ar_position, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :en_position, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :en_position, :class => 'form-control', dir: 'ltr' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :ar_text, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :ar_text, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :en_text, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :en_text, :class => 'form-control', dir: 'ltr' %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :position, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :position, :class => 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit t('helpers.links.submit'), :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_testimonials_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
