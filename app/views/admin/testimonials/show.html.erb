<%- model_class = Testimonial -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:ar_name) %>:</strong></dt>
  <dd><%= @testimonial.ar_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:en_name) %>:</strong></dt>
  <dd><%= @testimonial.en_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ar_position) %>:</strong></dt>
  <dd><%= @testimonial.ar_position %></dd>
  <dt><strong><%= model_class.human_attribute_name(:en_position) %>:</strong></dt>
  <dd><%= @testimonial.en_position %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ar_text) %>:</strong></dt>
  <dd><%= @testimonial.ar_text %></dd>
  <dt><strong><%= model_class.human_attribute_name(:en_text) %>:</strong></dt>
  <dd><%= @testimonial.en_text %></dd>
  <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
  <dd><%= @testimonial.position %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_testimonials_path, :class => 'btn btn-default'  %>
<%= link_to '<i class="fa fa-pencil"></i>'.html_safe,
              edit_admin_testimonial_path(@testimonial), :class => 'btn btn-default' %>
<%= link_to '<i class="fa fa-trash"></i>'.html_safe,
              admin_testimonial_path(@testimonial),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
