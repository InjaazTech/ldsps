<%- model_class = Wpage -%>
<div class="page-header">
  <h3><%=t model_class.human_attribute_name(:model_name) %></h3>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:ar_title) %></th>
      <th><%= model_class.human_attribute_name(:show_header) %></th>
      <th><%= model_class.human_attribute_name(:show_footer) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @wpages.each do |wpage| %>
      <tr>
        <td><%= wpage.ar_title %></td>
        <td><%= wpage.show_header? ? '<i class="icon-line-eye"></i>'.html_safe : '<i class="fa fa-eye-close"></i>'.html_safe  %></td>
        <td><%= wpage.show_footer? ? '<i class="icon-line-eye"></i>'.html_safe : '<i class="fa fa-eye-close"></i>'.html_safe  %></td>
        <td><%= short_datetime(wpage.created_at) %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      admin_wpage_path(wpage), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_wpage_path(wpage), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_wpage_path(wpage),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_wpage_path,
            :class => 'btn btn-primary' %>
