<%- model_class = Wpage -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:ar_title) %>:</strong></dt>
  <dd><%= @wpage.ar_title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:en_title) %>:</strong></dt>
  <dd><%= @wpage.en_title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tr_title) %>:</strong></dt>
  <dd><%= @wpage.tr_title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ar_content) %>:</strong></dt>
  <dd><%= @wpage.ar_content.html_safe %></dd>
  <dt><strong><%= model_class.human_attribute_name(:en_content) %>:</strong></dt>
  <dd><%= @wpage.en_content.html_safe %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tr_content) %>:</strong></dt>
  <dd><%= @wpage.tr_content.html_safe %></dd>
  <dt><strong><%= model_class.human_attribute_name(:show_header) %>:</strong></dt>
  <dd><%= @wpage.show_header %></dd>
  <dt><strong><%= model_class.human_attribute_name(:show_footer) %>:</strong></dt>
  <dd><%= @wpage.show_footer %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_wpages_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_wpage_path(@wpage), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_wpage_path(@wpage),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
