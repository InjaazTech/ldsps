<section class="section-padding section-2-bg mt-50">
  <div class="container">
    <div class="heading-div text-center heading-title">
      <h2><%=t('albums.title')%></h2>
      <img src="<%= asset_path('website/90x10x1.png') %>" alt="icon" />
    </div>
  </div>
</section>
<section class="section-padding section-1-bg pt-20" id="blog">
  <div class="container">
    <% @posts.each_slice(6) do |row| %>
    <div class="row">
      <% row.each do |post| %>				
        <div class="col-sm-3 blog-img">
          <a href="<%= post.path(current_locale) %>"><img class="album-img" src="<%= post.image_url %>" alt="<%= post.title(current_locale) %>"  class="img-responsive"/></a>
          <p><%= post.title(current_locale) %></p>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>			
</section>