<footer class="section-padding section-2-bg footer-section pt-40 black-bg" id="contact">
  <div class="container">
     <div class="text-center footer-div">
      <div class="col-sm-12">
        <div class="row contact-row">
          <div class="col-xs-6 col-sm-6 contact-space contact-space-1">
            <p>
              <h3 class="<%= arabic? ? 'text-right' : 'text-left'%> color-white"><%=t('about.title')%></h3>
              <p class="<%= arabic? ? 'text-right' : 'text-left'%>">
                <%= WebsiteConfig.get('about', current_locale) %>
              </p>
            </p>
          </div>
          <div class="col-xs-6 col-sm-6 contact-space contact-space-1">
            <ul>
              <li>
                <a target="_blank" href="<%= WebsiteConfig.get('facebook', current_locale) %>"><img src="<%= asset_path('website/48x48x9.png') %>" alt="facebook" class="img-responsive" /></a>
              </li>
              <li>
                <a target="_blank" href="<%= WebsiteConfig.get('instagram', current_locale) %>"><img src="<%= asset_path('website/instagram.png') %>" alt="instagram" class="img-responsive" /></a>
              </li>
            </ul>
            <span><a href="mailto:<%= WebsiteConfig.get('email', current_locale) %>"><%= WebsiteConfig.get('email', current_locale) %></a></span>
          </div>
        </div>
        <div class="separator"></div>
        <div class="copyright">
          <p><%= WebsiteConfig.get('copyright', current_locale).html_safe %></p>
        </div>
      </div>
    </div>
  </div>
</footer>