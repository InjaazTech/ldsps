<% if @post.present?%>
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "NewsArticle",
    "headline": "<%= @post.title(current_locale) %>",
    "image": "<%= @post.image_url %>",
    "publisher": {
      "@type": "Organization",
      "name": "LDSPS",
      "logo": {
        "@type": "ImageObject",
        "url": "<%= WebsiteConfig.get('logo', current_locale) %>"
      }
    },
    "datePublished": "<%= @post.created_at %>",
    "dateModified": "<%= @post.updated_at %>",
    "mainEntityOfPage": "<%= @post.path(current_locale)%>"
  }
</script>
<% else %>
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Local Development & Small-Projects Support",
    "email": "info@ldsps.org",
    "alternateName": "LDSPS",
    "url": "https://www.ldsps.org/",
    "logo": "<%= WebsiteConfig.get('logo', current_locale) %>",
    "sameAs": [
      "https://www.facebook.com/ldspso/"
    ]
  }
</script>
<% end %>