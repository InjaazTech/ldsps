<section class="section-padding orphan-children-section">
  <div class="container">
    <div class="col-sm-12 orphan-children-col text-center">
      <h2><%=t('reports.all')%></h2>
      <a href="<%= reports_path(current_locale)%>" class="btn btn-1"><%=t('show')%></a>
    </div>
  </div>
</section>
