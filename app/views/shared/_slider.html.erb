
      <!-- Start Main Slider -->
      <div class="main-slider" id="main-slider">
        <div class="slider big-slider slider-wrap">
          <% Slider.visible.each do |slider|%>
            <div class="slide" style="background-image: url(<%= slider.image_url %>);">
                <div class="container-fluid position-relative h-100">
                    <div class="slider-content h-100">
                        <div class="row align-items-center h-100">
                            <div class="col-xl-6 col-lg-12 col-md-12">
                                <h1 data-animation-in="fadeInUp" data-delay-in="1"><%= slider.title(current_locale) %></h1>
                                <p data-animation-in="fadeInUp" data-delay-in="1"><%= slider.subtitle(current_locale) %></p>
                                <% if slider.has_link?%>
                                <div class="slider-buttons d-flex align-items-center" data-animation-in="fadeInUp" data-delay-in="1">
                                    <a class="btn hvr-sweep-to-right" href="<%= slider.link %>" tabindex="0"><i aria-hidden="true" class=" mr-2"></i><%= slider.link_title(current_locale) %></a>
                                </div>
                                <% end %>
                            </div>
                            <!-- Col End -->
                        </div>
                        <!-- Row End -->
                    </div>
                    <!-- Slider Content End -->
                </div>
                <!-- Container End -->
            </div>
            <% end %>
          
            <!-- Slide 1 End -->
        </div>
        <!-- Slide Wrap End -->
      </div>
      <!-- Main Slider End -->
   