<% unless @sponsers.empty?%>
<section class="section-padding section-1-bg">
  <div class="container">							
    <div class="heading-div text-center">
      <h2><%=t('sponsers.title')%></h2>
      <img src="<%= asset_path('website/90x10x1.png') %>" alt="icon" />
    </div>
    <% @sponsers.each_slice(6) do |row| %>
      <div class="row sponsors-row">
        <% row.each do |sponser| %>
        <div class="col-xs-6 col-sm-4 col-md-2 sponsors-space-1 pt-20">
          <a href="<%= sponser.pretty_link%>">
          <img src="<%= sponser.image_url %>" alt="180x120x1" class="img-responsive"/>
          </a>	
        </div>
        <% end %>
      </div>
    <% end %>
    <div class="row sponsors-row">
      <div class="col-xs-12 col-sm-12 col-md-12 sponsors-space-1 pt-20 text-center">
        <a href="<%= sponsers_path(current_locale)%>" class="btn"><%=t('sponsers.all')%></a>
      </div>
    </div>
  </div>			
</section>
<% end %>