<section class="section-padding section-2-bg mt-50">
  <div class="container">
    <div class="heading-div text-center">
      <h2><%=t('team.title')%></h2>
      <img src="<%= asset_path('website/90x10x1.png') %>" alt="icon" />
    </div>
  </div>
</section>
<% unless @team_members.empty?%>
<section class="section-padding" id="donators">
  <div class="container">
    <% @team_members.each_slice(4) do |row| %>
      <div class="row donators-profile">
        <% row.each do |team_member| %>
        <div class="col-xs-6 col-sm-6 col-md-3">
          <div class="donators-profile-col text-center">
            <img src="<%= team_member.image_url %>" alt="<%= team_member.name(current_locale) %>" />
            <p class="team-text"><%= team_member.name(current_locale) %></p>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
<% end %>